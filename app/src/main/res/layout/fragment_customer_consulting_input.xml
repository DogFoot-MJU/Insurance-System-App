<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <TextView
        android:id="@+id/user_consult_input_mainTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Main Text"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/user_consult_input_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/user_consult_input_subTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sub Text"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_consult_input_mainTextView" />

    <EditText
        android:id="@+id/user_consult_input_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/dogFoot_gold"
        android:hint="Edit Text"
        app:layout_constraintTop_toBottomOf="@+id/user_consult_input_subTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <EditText
        android:id="@+id/user_consult_input_editText2"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/dogFoot_gold"
        android:hint="Edit Text"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@+id/user_consult_input_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




    <Button
        android:id="@+id/user_consult_input_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dogFoot_gold"
        android:text="Button"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toBottomOf="@+id/user_consult_input_editText2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>