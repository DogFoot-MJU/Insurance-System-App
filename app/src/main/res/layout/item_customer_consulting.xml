<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/consulting_item"
    android:background="@drawable/custom_border"
    android:paddingVertical="0dp"

    >

    <TextView
        android:id="@+id/item_customer_consulting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="제목 : "
        android:textColor="@color/black"
        android:textSize="18sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_customer_consulting_title_input"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/item_customer_consulting_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_customer_consulting_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="작성자 : "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_consulting_title"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_customer_consulting_author_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/item_customer_consulting_author"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_consulting_title" />

    <TextView
        android:id="@+id/item_customer_consulting_isanswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:text="답변 여부 : "
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_consulting_author"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_customer_consulting_isanswer_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/item_customer_consulting_isanswer"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_consulting_author" />

    <TextView
        android:id="@+id/item_customer_consulting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:text="작성 시각 : "
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/item_customer_consulting_time_input"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_consulting_author"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_customer_consulting_time_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_consulting_author" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_consulting_time_input"
        tools:layout_editor_absoluteX="0dp" />






</androidx.constraintlayout.widget.ConstraintLayout>